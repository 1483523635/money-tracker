<view>
    <action-sheet
            bindactiontap="btnClick"
            show="{{ showActionSheet }}"
            actions="{{ groups }}"
            title="请选择周"
            bind:close="closeActionSheet"
    >
        <view slot="choice-day" class="weui-cells">
            <view class="weui-cell ">
                <view class="weui-cell__hd">
                    <view class="weui-label">只看我</view>
                </view>
                <view class="weui-cell__bd">
                    <switch checked="{{onlyMe}}" bind:change="onOnlyMeChange"/>
                </view>
            </view>
            <view class="weui-cell ">
                <view class="weui-cell__hd">
                    <view class="weui-label">周:</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="selector" value="{{week}}" range="{{weekNumberOptions}}" bind:change="onWeekSelect">
                        <view class="weui-input">{{ week || "请选择"}}</view>
                    </picker>
                </view>
            </view>
        </view>
    </action-sheet>
    <report-base
            allItems="{{ allItems }}"
            groupingBy="type">
        <view slot="title" class="page__title weui-flex">
            <view>{{ weekDescription }}</view>
            <picker mode="selector" value="{{week}}" range="{{weekNumberOptions}}" bind:change="onWeekSelect">
                <view class="weui-input">({{ week || ""}})</view>
            </picker>
        </view>
    </report-base>
</view>
