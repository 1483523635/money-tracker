@import 'style/weui.wxss';

page {
    background-color: #EDEDED;
    font-size: 16px;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
    padding: 40px;
}

.page__bd {
    padding-bottom: 40px;
}

.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft {
    text-align: center;
    padding: 0 0 10px;
    padding: 0 0 calc(10px + constant(safe-area-inset-bottom));
    padding: 0 0 calc(10px + env(safe-area-inset-bottom));
}


.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.weui-cell_example:before {
    left: 52px;
}


/*this is for report base*/


.report-base-weui-tabbar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
}

.report-base-weui-tabbar__label {
    font-size: 16px;
}

.user_avatar {
    margin: 0 16px 0 8px;
    vertical-align: middle;
    width: 33px;
    height: 33px;
}

.report-base-weui-cell {
    padding: 10px;
    border-top: 1rpx solid rgba(0, 0, 0, .1)
}

.comment {
    color: rgba(0, 0, 0, .5);
    overflow: hidden;
    white-space: nowarp;
    text-overflow: ellipsis;
    max-width: 145px;
}

.cost_count {
    color: green;
    margin: 0 16px 0 0;
    min-width: 50px;
}

.income_count {
    color: red;
    margin: 0 16px 0 0;
    min-width: 50px;
}

.red {
    color: red;
}

.green {
    color: green;
}

.type {
    margin: 0 16px 0 0;
    min-width: 50px;
}

.weui-cell_ft_flex-grow {
    flex-grow: 1;
}

.weui-cells {
    padding-right: 4px
}

.weui-flex {
    flex-grow: 2;
}


@media (prefers-color-scheme: dark) {
    /* DarkMode 下的样式 start */
    page {
        background: #1b1b1b;
    }

    .kind-list__item {
        background-color: #1b1b1b;
    }

    .weui-flex__item {
        color: white;
    }

    .weui-cells {
        background-color: #333333;
        color: white;
    }

    .page__hd {
        color: white;
    }

    .weui-cells__title {
        color: rgba(255, 255, 255, 0.5);
    }

    .report-base-weui-cell, .weui-cell:before {
        border-top: 1rpx solid rgba(255, 255, 255, .1);
    }

    .comment {
        color: rgba(255, 255, 255, 0.5);
    }

    /* DarkMode 下的样式 end */

}
